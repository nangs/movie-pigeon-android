<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg_dates"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rb_date_0"
            style="@style/tab_date_item"/>

        <RadioButton
            android:id="@+id/rb_date_1"
            style="@style/tab_date_item"/>
        <RadioButton
            android:id="@+id/rb_date_2"
            style="@style/tab_date_item"/>
        <RadioButton
            android:id="@+id/rb_date_3"
            style="@style/tab_date_item"/>
        <RadioButton
            android:id="@+id/rb_date_4"
            style="@style/tab_date_item"/>
        <RadioButton
            android:id="@+id/rb_date_5"
            style="@style/tab_date_item"/>
        <RadioButton
            android:id="@+id/rb_date_6"
            style="@style/tab_date_item"
            android:layout_marginRight="2dp"/>
    </RadioGroup>

    <ListView
        android:id="@+id/cinema_movies_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>