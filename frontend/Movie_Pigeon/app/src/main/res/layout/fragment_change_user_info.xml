<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="New username: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/setting_fragment_username_tv"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:id="@+id/setting_fragment_username_et"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/setting_fragment_username_tv"
        android:layout_alignStart="@+id/setting_fragment_username_tv"
        android:inputType="text"
        android:background="@drawable/table_text_underline"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="New password: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/setting_fragment_now_password_et"
        android:id="@+id/setting_fragment_password_tv"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:id="@+id/setting_fragment_password_et"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/setting_fragment_password_tv"
        android:layout_alignStart="@+id/setting_fragment_password_tv"
        android:inputType="textPassword"
        android:background="@drawable/table_text_underline"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Confirm new password: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/setting_fragment_password_et"
        android:id="@+id/setting_fragment_repeat_password_tv"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:id="@+id/setting_fragment_repeat_password_et"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/setting_fragment_repeat_password_tv"
        android:layout_alignStart="@+id/setting_fragment_repeat_password_tv"
        android:inputType="textPassword"
        android:background="@drawable/table_text_underline"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Current password: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/setting_fragment_username_et"
        android:id="@+id/setting_fragment_now_password_tv"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:id="@+id/setting_fragment_now_password_et"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/setting_fragment_now_password_tv"
        android:layout_alignStart="@+id/setting_fragment_now_password_tv"
        android:inputType="textPassword"
        android:background="@drawable/table_text_underline"
        android:layout_height="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:text="Confirm"
        android:textAllCaps="false"
        android:id="@+id/setting_fragment_confirm"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/setting_fragment_repeat_password_et"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:text="Cancel"
        android:textAllCaps="false"
        android:id="@+id/setting_fragment_cancel"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/setting_fragment_confirm"
        android:layout_centerHorizontal="true" />
</RelativeLayout>