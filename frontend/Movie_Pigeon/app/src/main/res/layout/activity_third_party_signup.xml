<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="place holder"
        android:textSize="15dp"
        android:id="@+id/tpsTitle"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:id="@+id/tpsInput"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:inputType="text"
        android:background="@color/colorEditTextGrey"
        android:layout_height="20dp"
        android:layout_below="@+id/tpsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:text="Back"
        android:id="@+id/tpsBackButton"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_below="@+id/tpsConfirmButton"
        android:layout_alignStart="@+id/tpsConfirmButton"
        android:textAllCaps="false"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:text="Confirm"
        android:textAllCaps="false"
        android:id="@+id/tpsConfirmButton"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tpsInput"
        android:layout_centerHorizontal="true" />
</RelativeLayout>